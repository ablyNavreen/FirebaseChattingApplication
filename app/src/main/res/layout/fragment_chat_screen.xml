<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
    android:paddingBottom="@dimen/_15sdp"
    android:background="@color/white"
        android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/topBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/_12sdp"
        android:background="@drawable/maroon_black_gradient_bg"
        android:paddingTop="@dimen/_30sdp"
        android:paddingBottom="@dimen/_8sdp"
        android:layout_alignParentTop="true">
        <ImageView
            android:id="@+id/backIV"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:src="@drawable/baseline_arrow_back_24"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:fontFamily="sans-serif-black"
            android:layout_toRightOf="@+id/backIV"
            android:textColor="@color/white"
            android:textSize="@dimen/_14ssp"/>


     <TextView
            android:id="@+id/lastSeenTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="sans-serif"
            android:textColor="@color/white"
         android:layout_below="@id/tv"
            android:textSize="@dimen/_10ssp"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/noMessagesTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="No messages found!"
        android:layout_centerInParent="true"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/black"
        android:textSize="@dimen/_10ssp"
       />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/messagesRV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/_12sdp"
            android:layout_below="@id/topBarLayout"
            tools:listitem="@layout/chat_message_item"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:layout_above="@id/sendMsgLayout">

        </androidx.recyclerview.widget.RecyclerView>

        <RelativeLayout
            android:id="@+id/sendMsgLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_alignParentBottom="true">

            <EditText
                android:id="@+id/messageET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter message"
                android:layout_marginHorizontal="5dp"
                android:layout_toLeftOf="@id/sendBT"
                android:textColor="@color/black"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/sendBT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="send"
                android:fontFamily="sans-serif"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:background="@drawable/white_rounded_bg"
                android:backgroundTint="@color/black"
                android:layout_alignParentEnd="true"/>


        </RelativeLayout>

    </RelativeLayout>
